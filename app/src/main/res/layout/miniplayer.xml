<?xml version="1.0" encoding="utf-8"?>
<com.exceptionaldevs.muzyka.ui.widget.Miniplayer
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/player"
        android:transitionName="@string/transition_player"
        android:background="@color/background_light"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="220dp">

    <com.exceptionaldevs.muzyka.ui.widget.HeartView
            android:id="@+id/heartview"
            android:layout_gravity="center"
            android:clipToPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <com.exceptionaldevs.muzyka.ui.widget.SeekArc
            android:id="@+id/progressBar"
            android:layout_width="@dimen/seekarc_diameter"
            android:layout_height="@dimen/seekarc_diameter"
            android:layout_gravity="center"
            android:clipToPadding="false"
            android:padding="30dp"
            app:arcWidth="4dp"
            app:arcColor="@color/colorPrimary"
            app:progressColor="@color/colorAccent"
            app:progressWidth="4dp"
            app:touchInside="false"
            app:clockwise="true"
            app:rotation="270"
            app:sweepAngle="180"
            app:startAngle="0"
            />

    <com.wnafee.vector.MorphButton
            android:id="@+id/nextBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="right|center_vertical"
            android:scaleType="center"
            app:vc_startDrawable="@drawable/ic_next_to_nextnext_36dp"
            app:vc_endDrawable="@drawable/ic_next_to_nextnext_36dp"
            app:vc_foregroundTint="@color/colorPrimary"
            android:background="?attr/selectableItemBackgroundBorderless"/>

    <com.wnafee.vector.MorphButton
            android:id="@+id/rewindBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="left|center_vertical"
            android:scaleType="center"
            app:vc_startDrawable="@drawable/ic_rewind_to_rewindrewind_36dp"
            app:vc_endDrawable="@drawable/ic_rewind_to_rewindrewind_36dp"
            app:vc_foregroundTint="@color/colorPrimary"
            android:background="?attr/selectableItemBackgroundBorderless"/>

    <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/showPlaylistBtn"
            android:src="@drawable/ic_playlist"
            android:tint="@color/material_blue_grey_400"
            android:layout_gravity="right|top"
            android:scaleType="center"
            android:background="?attr/selectableItemBackgroundBorderless"/>

    <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/showSettingsBtn"
            android:src="@drawable/ic_settings_blue_grey_400_24dp"
            android:layout_gravity="left|top"
            android:scaleType="center"
            android:background="?attr/selectableItemBackgroundBorderless"/>

    <com.exceptionaldevs.muzyka.ui.widget.RepeatButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/repeatBtn"
            android:src="@drawable/repeat_state_drawable"
            android:layout_gravity="left|bottom"
            android:scaleType="center"
            android:background="?attr/selectableItemBackgroundBorderless"/>

    <com.exceptionaldevs.muzyka.ui.widget.ShuffleButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/shuffleBtn"
            android:src="@drawable/shuffle_state_drawable"
            android:layout_gravity="right|bottom"
            android:scaleType="center"
            android:background="?attr/selectableItemBackgroundBorderless"/>

    <TextView
            android:id="@+id/playerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:maxWidth="@dimen/seekarc_diameter"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:text="Night Visions - Imagine Dragons"/>
</com.exceptionaldevs.muzyka.ui.widget.Miniplayer>