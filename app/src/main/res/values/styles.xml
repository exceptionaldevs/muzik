<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:navigationBarColor">@color/primary_super_dark</item>-->
        <!--<item name="android:statusBarColor">@color/background_super_dark</item>-->
        <!--<item name="android:textColorHint">@color/hint_disabled_dark</item>-->
        <!--<item name="android:windowBackground">@color/background_light</item>-->
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementsUseOverlay">true</item>
    </style>

    <style name="AppTheme.Translucent">
        <!-- using a semi-transparent window background for the drag-back gesture -->
        <item name="android:windowBackground">@color/scrim</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="AppTheme.Translucent.Player">
        <item name="android:windowEnterTransition">@transition/player_enter</item>
        <item name="android:windowReturnTransition">@transition/player_return</item>
    </style>

    <style name="AppTheme.Translucent.FortuneWheel">
        <item name="android:windowBackground">@color/fortuneWheelScrim</item>
        <item name="android:windowEnterTransition">@transition/fortunewheel_enter</item>
        <item name="android:windowReturnTransition">@transition/fortunewheel_return</item>
    </style>

    <style name="AppTheme.Translucent.LibSheet">
        <item name="android:windowEnterTransition">@transition/lib_bottom_sheet_enter</item>
        <item name="android:windowReturnTransition">@transition/lib_bottom_sheet_return</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Settings" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="preferenceTheme">@style/AppTheme.Preferences</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Preferences" parent="@style/PreferenceThemeOverlay">

    </style>

    <style name="Widget.AppTheme" parent="android:Widget"/>


    <style name="Widget.AppTheme.DialogTitle">
        <item name="android:textAppearance">@style/TextAppearance.DialogTitle</item>
        <!--<item name="lineHeightHint">28sp</item>-->
    </style>

    <style name="Widget.AppTheme.LibItemTitle">
        <item name="android:textAppearance">@style/TextAppearance.LibItemTitle</item>
        <!--<item name="lineHeightHint">32sp</item>-->
    </style>

    <style name="Widget.AppTheme.TextStyleCaption">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>

    <style name="Widget.AppTheme.TextStyleSubhead">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_secondary_dark</item>
    </style>

    <style name="Widget.AppTheme.ListItemPrimaryText" parent="Widget.AppTheme.TextStyleCaption">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Widget.AppTheme.ListItemSecondaryText" parent="Widget.AppTheme.TextStyleSubhead">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Widget.AppTheme.InlineActionButton" parent="@android:style/Widget.Material.Button">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">@style/TextAppearance.PlaylistButtons</item>
        <item name="android:drawablePadding">@dimen/spacing_micro</item>
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
    </style>

    <style name="TextAppearance.PlaylistButtons" parent="@android:style/TextAppearance.Material.Caption">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFeatureSettings">smcp, onum</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TextAppearance.DialogTitle" parent="@android:style/TextAppearance.Material.Title">
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextAppearance.LibItemTitle" parent="@android:style/TextAppearance.Material.Headline">
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="SeekArc">
        <item name="arcColor">@color/progress_gray_dark</item>
    </style>

    <style name="SeekArcLight">
        <item name="arcColor">@color/progress_gray</item>
    </style>

    <style name="DefaultListItemContainer">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="ThreeLineListItemContainer" parent="DefaultListItemContainer">
        <item name="android:layout_height">88dp</item>
    </style>

    <style name="TwoLineListItemContainer" parent="DefaultListItemContainer">
        <item name="android:layout_height">72dp</item>
    </style>

    <style name="OneLineSimpleListItemContainer" parent="DefaultListItemContainer">
        <item name="android:layout_height">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="FloatLabelDefaultStyle" parent="android:TextAppearance.Small">
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DialogStyle" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
</resources>
