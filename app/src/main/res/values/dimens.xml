    <dimen name="padding_normal_til">12dp</dimen>
    <dimen name="til_margin_fix">-4dp</dimen>


    <!-- dialogs -->
    <dimen name="padding_dialog">24dp</dimen>
    <dimen name="dialog_title_spacing">20dp</dimen>

    <!-- drawer -->
    <dimen name="drawer_width">@dimen/match_parent</dimen>

    <!-- grid -->
    <integer name="num_columns">2</integer>
    <dimen name="grid_icon_with_padding">40dp</dimen> <!-- 24dp icon + 2 * @dimen/spacing_normal -->

    <!-- designer news story -->
    <dimen name="extended_height_toolbar">128dp</dimen>
    <dimen name="comment_thread_width">4dp</dimen>
    <dimen name="comment_thread_gap">4dp</dimen>
    <dimen name="comment_separation">16dp</dimen>

    <!-- dribbble shot -->
    <dimen name="shot_collapsed_app_bar_height">168dp</dimen> <!-- 3 * ?android:actionBarSize -->
