<?xml version="1.0" encoding="utf-8"?>
<selector
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:constantSize="true">
    <item
            android:id="@+id/repeat_none"
            app:state_repeat_none="true">
        <bitmap android:src="@drawable/ic_repeat_blue_grey_800_24dp"
                android:tint="@color/colorPrimaryLight"/>
    </item>

    <item
            android:id="@+id/repeat_one"
            app:state_repeat_one="true">
        <bitmap android:src="@drawable/ic_repeat_one_blue_grey_800_24dp"
                android:tint="@color/colorAccent"/>
    </item>

    <item
            android:id="@+id/repeat_all"
            app:state_repeat_all="true">
        <bitmap android:src="@drawable/ic_repeat_blue_grey_800_24dp"
                android:tint="@color/colorAccent"/>
    </item>

</selector>