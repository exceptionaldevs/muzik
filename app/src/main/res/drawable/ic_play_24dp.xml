<?xml version="1.0" encoding="utf-8"?>

<animated-selector
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:constantSize="true">

    <item
            android:id="@+id/pause"
            android:state_checked="true"
            android:drawable="@drawable/ic_pause_vector_24dp" />

    <item
            android:id="@+id/play"
            android:drawable="@drawable/ic_play_vector_24dp" />

    <transition
            android:fromId="@id/play"
            android:toId="@id/pause"
            android:drawable="@drawable/ic_play_to_pause_24dp" />

    <transition
            android:fromId="@id/pause"
            android:toId="@id/play"
            android:drawable="@drawable/ic_pause_to_play_24dp" />

</animated-selector>
